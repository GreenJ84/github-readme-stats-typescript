{
    "version": 1,
    "build": {
        "functions": {
            "./**/*.ts": {
                "ignore": false
            }
        },
        "src": "src",
        "command": "npm run build",
        "output": ".dist"
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": ".dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "start": "node .dist/server.js"
}