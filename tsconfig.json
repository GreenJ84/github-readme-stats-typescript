{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "outDir": "/dist",
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "ts-node": {
        "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "skipDefaultLibCheck": true,
        "outDir": "/dist",
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "isolatedModules": true
        },
        "files": true
    },
    "include": ["./*.ts", "./*.tsx", "./src/**/*.ts", "./src/**/*.tsx"]
}
